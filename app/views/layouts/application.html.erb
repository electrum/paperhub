<!DOCTYPE html>
<html>
<head>
  <title>Paperhub</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div style="text-align:right;">
  <% if @session_user %>
    <%= @session_user.username %> |
    <%= link_to 'Log Out', session_path, :method => :delete %>
  <% else %>
    <%= link_to 'Login', new_session_path %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
