<!DOCTYPE html>
<html>
<head>
  <title>Paperhub</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div style="width:1000px; margin:0px auto;">
  <div style="text-align:right; background-color:#eee; padding:5px 10px; -webkit-border-radius:5px;">
    <span style="float:left; font-weight:bold; font-size:16px;">
      <%= link_to 'PaperHub', root_path, :style => 'text-decoration:none;' %></span>
    <% if @session_user %>
      <%= image_tag(gravatar_url(@session_user.email, 20), :style => 'vertical-align:top;') %>
      <%= link_to @session_user.username, user_path(@session_user) %> |
      <%= link_to 'Log Out', session_path, :method => :delete %>
    <% else %>
      <%= link_to 'Sign up', new_user_path %> |
      <%= link_to 'Login', new_session_path %>
    <% end %>
  </div>

  <%= yield %>
</div>

</body>
</html>
