<h1>Log in</h1>

<% if flash[:alert] %>
  <div id="error_explanation">
    <h2><%= flash[:alert] %></h2>
  </div>
<% end %>

<%= form_tag session_path do %>
  <p>
    <%= label_tag :username %><br />
    <%= text_field_tag :username, params[:username] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag 'Log in' %></p>
<% end %>
