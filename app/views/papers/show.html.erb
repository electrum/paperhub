<p id="notice"><%= notice %></p>

<h1><%= @paper.title %></h1>
<h2><%= @paper.authors.map {|i| link_to i.name, author_path(i) }.join(', ').html_safe %></h2>
<h3><%= Date::MONTHNAMES[@paper.month] if @paper.month %> <%= @paper.year %></h3>

<blockquote>
  <%= simple_format @paper.abstract.squeeze("\n").gsub("\n", "\n\n") %>
</blockquote>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Papers', papers_path %>
